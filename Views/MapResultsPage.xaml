<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:FlickrApp.ViewModels"
             xmlns:shared="clr-namespace:FlickrApp.Views.Shared"
             x:Class="FlickrApp.Views.MapResultsPage">

    <ContentPage.BindingContext>
        <viewModels:MapResultsViewModel />
    </ContentPage.BindingContext>

    <Grid
        RowDefinitions=".2*,.8*"
        Style="{StaticResource GridFlickrAppContainer}">

        <VerticalStackLayout
            Grid.Row="0">
            <Label Text="Map Results" />
        </VerticalStackLayout>

        <shared:PhotoListView
            Grid.Row="1"
            ItemsSource="{Binding Photos}"
            LoadMoreItemsCommand="{Binding LoadMoreItemsCommand}"
            ItemTappedCommand="{Binding GoToPhotoDetailsCommand}" />

    </Grid>

</ContentPage>