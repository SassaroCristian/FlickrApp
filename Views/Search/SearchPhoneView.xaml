<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

             xmlns:shared="clr-namespace:FlickrApp.Views.Shared"
             xmlns:viewmodels="clr-namespace:FlickrApp.ViewModels"

             x:DataType="viewmodels:SearchViewModel"

             x:Class="FlickrApp.Views.Search.SearchPhoneView">

    <Grid
        RowDefinitions="Auto, *"
        Style="{StaticResource GridFlickrAppContainer}">
        <Border
            Grid.Row="0"
            Style="{StaticResource BorderFlickrAppSearchBar}"
            StrokeShape="RoundRectangle 10">
            <SearchBar
                Style="{StaticResource SearchBarFlickrApp}"
                Placeholder="Search photos..."
                VerticalOptions="Center"
                Text="{Binding SearchText}"
                SearchCommand="{Binding SearchCommand}" />
        </Border>

        <shared:PhotoListView
            Grid.Row="1"
            ItemsSource="{Binding Photos}"
            LoadMoreItemsCommand="{Binding LoadMoreItemsCommand}"
            ItemTappedCommand="{Binding GoToPhotoDetailsCommand}" />
    </Grid>

</ContentView>