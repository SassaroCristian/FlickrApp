<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="FlickrApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FlickrApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="FlickrApp">


    <FlyoutItem Title="Explore">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:DiscoverPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Search">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:SearchPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Map">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:MapsPage}" />
        </Tab>
    </FlyoutItem>

</Shell>